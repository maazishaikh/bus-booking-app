<h2>Add a New Bus</h2>
<form action="/admin/add" method="POST">
  <input name="name" placeholder="Bus Name" required>
  <input name="from" placeholder="From" required>
  <input name="to" placeholder="To" required>
  <input type="date" name="date" required>
  <input name="time" placeholder="Time (e.g. 14:00)" required>
  <input type="number" name="seats" placeholder="Seats" required>
  <input type="number" name="price" placeholder="Price" required>
  <button type="submit">Add Bus</button>
</form>
